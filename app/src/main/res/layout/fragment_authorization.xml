<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:gravity="center"
        android:text="Enter your login:"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/editLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/bg_edit_text"
        android:gravity="center"
        android:textSize="20sp"
        android:nextFocusDown="@id/editPass"
        android:maxLines="1"
        android:inputType="text"
        android:padding="5dp"
        android:layout_marginHorizontal="30dp"
        android:textCursorDrawable="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/textLogin"
        app:layout_constraintBottom_toTopOf="@+id/textPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/textPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Enter your password:"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editLogin"
        app:layout_constraintBottom_toTopOf="@+id/editPass"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/editPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:background="@drawable/bg_edit_text"
        android:gravity="center"
        android:textSize="25sp"
        android:nextFocusDown="@id/next"
        android:maxLines="1"
        android:inputType="textPassword"
        android:layout_marginHorizontal="30dp"
        android:padding="5dp"
        android:textCursorDrawable="@color/gray"
        app:layout_constraintTop_toBottomOf="@+id/textPass"
        app:layout_constraintBottom_toTopOf="@+id/login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="25sp"
        android:textColor="@color/red"
        android:background="@drawable/bg_btn"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/editPass"
        app:layout_constraintStart_toEndOf="@+id/registration"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--TextView
        android:id="@+id/token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last login"
        android:textSize="25sp"
        android:textColor="@color/yellow"
        android:background="@drawable/bg_btn"
        android:padding="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/registration"/-->

    <TextView
        android:id="@+id/registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="25sp"
        android:textColor="@color/yellow"
        android:background="@drawable/bg_btn"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="@+id/login"
        app:layout_constraintEnd_toStartOf="@+id/login"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>